@model ProyectoOL.Dto.UserDto

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page">
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="spaces">
                <h2>Iniciar sesión</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nombre_Usuario, "Nombre de usuario", htmlAttributes: new { @class = "control-label custom-label"})
                    @Html.EditorFor(model => model.Nombre_Usuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Escriba su nombre de usuario" } })
                    @Html.ValidationMessageFor(model => model.Nombre_Usuario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Contrasena, "Contraseña", htmlAttributes: new { @class = "control-label custom-label"})
                    @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Escriba su contraseña de mínimo 8 carácteres" } })
                    @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="buttons">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
        </div>        
    }
</div>
</div>






