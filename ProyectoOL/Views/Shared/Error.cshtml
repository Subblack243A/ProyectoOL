
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .error-container {
        position: fixed;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #DBD3D0;
        font-family: 'Josefin Sans', sans-serif;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        overflow: auto; /* Agrega scroll si el contenido es más grande que la pantalla */
    }

    h1 {
        font-size: 36px;
        color: red;
    }

    h2 {
        font-size: 25px;
        color: #333;
    }
</style>
<div class="error-container">
    <h1>Error</h1>
    <h2>Error al procesar la solicitud</h2>
    <h2>Contacta al administrador</h2>
</div>