<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;300;600&family=Josefin+Sans:ital,wght@0,300;1,100;1,400&display=swap" rel="stylesheet" />
    <link href="~/Content/Reset.css" rel="stylesheet" />
    <link href="~/Content/HeaderStyle.css" rel="stylesheet" />
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link href="~/Content/FootStyle.css" rel="stylesheet" />
    <link href="~/Content/Register.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header class="menu">
        @Html.ActionLink("Open Library", "Index", "Home", new { area = "" }, new { @class = "logo" })
        <nav>
            <ul class="menu_login" type="none">
                <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "menu_login_item" })</li>
                <li>@Html.ActionLink("Biblioteca Digital", "Digital", "Home", new { area = "" }, new { @class = "menu_login_item" })</li>
                <li>@Html.ActionLink("Registrarse", "Register", "User", new { area = "" }, new { @class = "menu_login_item btn" })</li>
                <li>@Html.ActionLink("Inicio de Sesion", "InicioSesion", "User", new { area = "" }, new { @class = "menu_login_item btn" })</li>
            </ul>
        </nav>
    </header>

    <div class="c">
        @RenderBody()
    </div>

    <footer class="foot_container">
        <div class="foot_contact">
            <p>Encuentranos en:</p>
            <img clas="logo_facebook" src="~/Images/facebook.svg" alt="Facebook" />
            <img clas="logo_twitter" src="~/Images/twitter.svg" alt="Twitter" />
            <img clas="logo_instagram" src="~/Images/instagram.svg" alt="Instagram" />
        </div>
        <div class="copy">
            <p>Copyright© 2023</p>
        </div>
        <div>
            @Html.ActionLink("Open Library", "Index", "Home", new { area = "" }, new { @class = "logo" })
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
